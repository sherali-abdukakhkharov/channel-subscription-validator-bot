{
  "name": "channel-subscription-validator-bot",
  "version": "1.0.0",
  "description": "Telegram bot for channel subscription validation and protected PDF delivery",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "migration:make": "tsx node_modules/knex/bin/cli.js --knexfile knexfile.ts migrate:make",
    "migration:latest": "tsx node_modules/knex/bin/cli.js --knexfile knexfile.ts migrate:latest",
    "migration:rollback": "tsx node_modules/knex/bin/cli.js --knexfile knexfile.ts migrate:rollback"
  },
  "dependencies": {
    "@grammyjs/auto-retry": "^2.0.0",
    "@grammyjs/hydrate": "^1.4.1",
    "@grammyjs/storage-free": "^2.5.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "axios": "^1.12.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.4.5",
    "grammy": "^1.10.0",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.1.3"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
